{
  "name": "exerlog",
  "version": "1.0.0",
  "description": "A web app to help keep track of your at home workouts",
  "main": "src/server/index.js",
  "private": true,
  "cacheDirectories": [
    "node_modules"
  ],
  "scripts": {
    "app": "concurrently  \"npm run dev:*\"",
    "dev:server": "nodemon src/server/index.js",
    "test": "jest src/server/tests",
    "test:watch": "jest src/server/tests --watch",
    "dev:client": "parcel src/client/index.html --open",
    "build": "parcel build src/client/index.html --out-dir src/client/public",
    "prod:server": "node src/server/index.js",
    "heroku-postbuild": "npm run build && npm install --prefix client && npm run build --prefix client"
  },
  "keywords": [
    "exercise",
    "react",
    "express",
    "javascript"
  ],
  "author": "Dane Miller <khadane.miller@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "@reduxjs/toolkit": "^1.3.5",
    "@types/jest": "^25.2.1",
    "autoprefixer": "^9.7.6",
    "axios": "^0.19.2",
    "bcrypt": "^4.0.1",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "date-fns": "^2.13.0",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "helmet": "^3.22.0",
    "jsonwebtoken": "^8.5.1",
    "jwt-decode": "^2.2.0",
    "mongoose": "^5.9.11",
    "parcel-bundler": "^1.12.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-hook-form": "^5.6.1",
    "react-query": "^1.3.0",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "tailwindcss": "^1.4.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "husky": "^4.2.5",
    "jest": "^25.5.2",
    "lint-staged": "^10.2.1",
    "mongodb-memory-server-core": "^6.5.2",
    "nodemon": "^2.0.3",
    "prettier": "^2.0.5"
  },
  "lint-staged": {
    "src/server/**/*.js": [
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "jest": {
    "testEnvironment": "node"
  }
}
